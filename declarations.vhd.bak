library ieee;
use ieee.std_logic_1164.all;

package declarations is
	-- D Flip Flop Component
	component vDFF is
		generic(n : integer := 1);
		port(clk : in std_logic;
		     D : in std_logic_vector(n-1 downto 0);
		     Q : out std_logic_vector(n-1 downto 0));
	end component;
	-- States for ModeFSM
	constant MODE_STATE_WIDTH: integer := 2;
	constant MAIN_MENU: std_logic_vector(MODE_STATE_WIDTH-1 downto 0) := 2d"0";
	constant GAME_STATE: std_logic_vector(MODE_STATE_WIDTH-1 downto 0) := 2d"1";
	constant GAME_OVER_SCREEN: std_logic_vector(MODE_STATE_WIDTH-1 downto 0) := 2d"2";
	-- ModeFSM Component
	component ModeFSM is
		port(clk, rst, end_game : in std_logic;
		     key : in std_logic_vector(9 downto 0);
		     mode : out std_logic_vector(1 downto 0));
	end component;
end package;